                                }
                            }
                        }); //ajax
                        location.reload();
                    }
             


            //logout listener
            $("#logout").on("click", logout);

            function logout() {
                $.ajax({
                    url: "/test/logout",
                    method: "GET",
                    success: function(result, status) {
                        console.log(result);

                        if (result.successful) {
                            window.location.href = "/test/";
                        }
                        else {
                            $("#errorMessage").html(result.message).css("color", red);
                        }
                    }
                }); //ajax
